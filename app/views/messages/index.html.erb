<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

        <%= sync partial: 'message_row', collection: @messages %>
        <%= sync_new partial: 'message_row', resource: Message.new %>        

  </tbody>
</table>

<br>

<%= form_for new_message_path, remote: true do |f| %>
    <%= f.text_field :body %>
    <%= f.text_field :user %>
    <%= f.submit %>
<% end %>

<%= link_to 'New Message', new_message_path %>
